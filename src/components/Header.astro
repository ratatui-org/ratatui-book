---
import type { Props } from "@astrojs/starlight/props";

import Search from "@astrojs/starlight/components/Search.astro";
import SiteTitle from "@astrojs/starlight/components/SiteTitle.astro";
import ThemeSelect from "@astrojs/starlight/components/ThemeSelect.astro";
import SocialIcons from "@astrojs/starlight/components/SocialIcons.astro";
import LanguageSelect from "@astrojs/starlight/components/LanguageSelect.astro";
---

<div class="flex h-full items-center justify-between">
  <div class="flex">
    <SiteTitle {...Astro.props} />
  </div>
  <div class="flex flex-grow"></div>
  <a
    class="mx-2 rounded bg-blue-700 px-4 py-2 text-white no-underline transition duration-300 hover:bg-blue-900"
    target="_blank"
    href="https://docs.rs/ratatui/latest/ratatui/">docs.rs</a
  >
  <a
    class="mx-2 rounded bg-blue-700 px-4 py-2 text-white no-underline transition duration-300 hover:bg-blue-900"
    target="_blank"
    href="https://crates.io/crates/ratatui/">crates.io</a
  >
  <div class="flex px-6">
    <Search {...Astro.props} />
  </div>
  <div class="hidden items-center gap-4 md:flex">
    <div class="flex items-center gap-4">
      <SocialIcons {...Astro.props} />
      <span class="block h-8 border-r border-gray-500"></span>
      <!-- For the pseudo element -->
    </div>
    <ThemeSelect {...Astro.props} />
    <LanguageSelect {...Astro.props} />
  </div>
</div>
